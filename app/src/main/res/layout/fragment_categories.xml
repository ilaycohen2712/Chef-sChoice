<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Title -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/all_recipes"
        android:textSize="24sp"
        android:padding="16dp"
        android:textStyle="bold" />

    <!-- Recipe Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        android:background="@android:color/black"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Recipe Image -->
            <ImageView
                android:id="@+id/recipeImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_recipe_image"
                android:importantForAccessibility="no" />

            <!-- Recipe Name -->
            <TextView
                android:id="@+id/recipeNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/omlet_with_mushrooms"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Calories -->
            <TextView
                android:id="@+id/caloriesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/calories_100"
                android:textSize="18sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/showPopupButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/add_comment" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="8dp"
        android:background="@android:color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Recipe Image -->
            <ImageView
                android:id="@+id/secondImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_recipe_image"
                android:importantForAccessibility="no" />

            <!-- Recipe Name -->
            <TextView
                android:id="@+id/recipeSecondTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/burger"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Calories -->
            <TextView
                android:id="@+id/caloriesSecond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/calories_500"
                android:textSize="18sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/showPopupButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/add_comment1" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <!-- Add more recipe cards here as needed -->

</LinearLayout>
